[
  {
    "context": "Editor",
    "bindings": {
      "ctrl-k w": "pane::CloseActiveItem",
      // scorll and center
      "ctrl-d": ["vim::ScrollPageDown", "editor::ScrollCursorCenter"],
      "ctrl-u": ["vim::ScrollPageUp", "editor::ScrollCursorCenter"]
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "b": "editor::ToggleComments"
    }
  }
]
